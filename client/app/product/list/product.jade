.margin-top-bottom(ng-switch="filters.view.selected")
	.list-group.bouncy-slide-right(ng-switch-when="list")
		a.list-group-item(ng-repeat="product in products | filter:productFilters | orderBy:filters.order.by.id")
			.media.col-md-3
				figure.pull-left
					img.media-object.img-rounded.img-responsive(ng-src="{{product.image}}")
			.col-md-6
				h4.list-group-item-heading {{product.title}}
				p.list-group-item-text {{product.body}}
			.col-md-3.text-center
				h4 $ {{product.price}}
				//- p 123&nbsp;
				//- 	small reviews
				.stars
					rating(ng-model="product.rating", max="5", readonly="true")
					//- each star in [1,2,3,4,5]
					//- 	if star === 5
					//- 		span.glyphicon.glyphicon-star-empty
					//- 	else		
					//- 		span.glyphicon.glyphicon-star
				//- p Average 4.5&nbsp;
				//- 	small /
				//- 	| &nbsp;5
				p {{product.review}} reviews
	.col-md-4.bouncy-scale-in(ng-switch-when="grid", ng-repeat="product in products | filter:productFilters | orderBy:filter.order.by.id")
		.thumbnail
			img(ng-src="{{product.image}}")
			.caption
				h4.pull-right $74.99
				h4 {{product.title}}
				p 
					| This is a short description. Lorem ipsum dolor sit amet, consectetur adipiscing elit.
			.ratings
				p.pull-right
					| 31 reviews
				p
					each star in [1,2,3,4,5]
						if star === 5
							span.glyphicon.glyphicon-star-empty
						else		
							span.glyphicon.glyphicon-star
