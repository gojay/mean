div.spinner-wrapper-primary(ng-show="oauthLoading")
  .wandering-cubes-spinner
  p.text-primary.text-center
    | You're authenticated, Please wait..
form.form(name='form', ng-submit='login(form)', novalidate='', ng-hide="oauthLoading")
  #input-email.form-group(ng-class="{'has-error': form.email.$invalid}")
    //- label Email
    input.form-control(type='email', name='email', ng-model='user.email', placeholder="Email", required)
    p.help-block(ng-show="form.email.$error.required && submitted")
      | Please enter your email!
    p.help-block(ng-show="form.email.$error.email && submitted")
      | Please enter your valid email!
  #input-password.form-group(ng-class="{'has-error': form.email.$invalid}")
    //- label Password
    input.form-control(type='password', name='password', ng-model='user.password', placeholder="Password", required)
    p.help-block(ng-show="form.password.$error.required && submitted")
      | Please enter your password
  #error-others.form-group.has-error
    p.help-block {{ errors.other }}

  div
    //- button.btn.btn-inverse.btn-lg.btn-login(type='submit', ng-disabled="form.$invalid")
    button.btn.btn-lg.btn-primary(type='submit', ng-class="{'btn-block': showDialog}")
      i.fa.fa-sign-in
      = ' '
      | {{ showDialog ? 'Sign in' : 'Login' }}
    = ' '
    a.btn.btn-default.btn-lg.btn-register(href='/signup', ng-hide="showDialog")
      | Register

div(ng-include="'components/loginForm/loginOauth.html'", ng-hide="oauthLoading")